{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types/"],
    "baseUrl": "./",                       /* Base directory to resolve non-absolute module names. */
    "paths": {
      "~/*": [
        "../src/*"
      ],
      "@/*": [
        "../src/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
