{
  "eslint.enable": true,
  "editor.formatOnSave": false,
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "editor.renderWhitespace": "boundary",
  "files.autoSave": "onWindowChange",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },

  "editor.codeActionsOnSave": {
    "source.fixAll": true
  }
}
